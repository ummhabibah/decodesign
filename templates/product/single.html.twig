<div class="product">
	<div class="product-image">
		<img src="/uploads/{{ product.image }}" class="img-fluid" alt="{{ product.image }}">
		<div class="product-hover-overlay">
			<a href="{{ path('product', { 'slug' : product.slug }) }}" class="product-hover-overlay-link"></a>
			<div class="product-hover-overlay-buttons">
				<a href="" class="btn btn-outline-dark btn-product-left"><i class="fa fa-shopping-cart"></i></a>
				<a href="{{ path('product', { 'slug' : product.slug }) }}" class="btn btn-dark btn-buy"><i class="fa fa-eye"></i><span class="btn-buy-label ml-2">View</span></a>
			</div>
		</div>
	</div>
	<div class="pt-2">
		<p class="text-muted text-sm mb-1">{{ product.category }}</p>
		<h3 class="h6 text-uppercase mb-1"><a class="text-dark" href="{{ path('product', { 'slug' : product.slug }) }}">{{ product.name }}</a></h3>
		<span class="text-muted">{{ product.price }}</span>
	</div>
</div>