{% extends 'base.html.twig' %}

{% block title %}Profile - Password | DecoDesign : fashion at home and at a low cost{% endblock %}

{% block body %}
	<div class="container">
		<ol class="breadcrumb justify-content-center">
			<li class="breadcrumb-item"><a href="{{ path('profile') }}">Profile</a></li>
			<li class="breadcrumb-item active">Password</li>
		</ol>
		<div class="container-content pb-4 text-center">
			<h1 class="container-heading">Change password</h1>
		</div>
	</div>
	<div class="container">
		{% for message in app.flashes('notice') %}
 			<div class="alert alert-info">
 				{{ message }}
 			</div>
 		{% endfor %}

		{{ form_start(form) }}
		<div class="row">
			<div class="col-md-12">{{ form_row(form.old_password) }}</div>
			<div class="col-md-6">{{ form_row(form.new_password.first) }}</div>
			<div class="col-md-6">{{ form_row(form.new_password.second) }}</div>
			<div class="form-group text-center">
				<button type="submit" class="btn btn-outline-dark">Change</button>
			</div>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
