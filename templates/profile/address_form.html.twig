{% extends 'base.html.twig' %}

{% block title %}Profile - Address | DecoDesign : fashion at home and at a low cost{% endblock %}

{% block body %}
	<div class="container">
		<ol class="breadcrumb justify-content-center">
			<li class="breadcrumb-item"><a href="{{ path('profile') }}">Profile</a></li>
			<li class="breadcrumb-item"><a href="{{ path('profile_address') }}">My addresses</a></li>
			<li class="breadcrumb-item active">Address</li>
		</ol>
		<div class="container-content pb-4 text-center">
			<h1 class="container-heading">Address</h1>
		</div>
	</div>
	<div class="container">
		{{ form_start(form) }}
		<div class="row">
			<div class="col-md-12">{{ form_row(form.name) }}</div>
			<div class="col-md-6">{{ form_row(form.lastname) }}</div>
			<div class="col-md-6">{{ form_row(form.firstname) }}</div>
			<div class="col-md-12">{{ form_row(form.address) }}</div>
			<div class="col-md-3">{{ form_row(form.city) }}</div>
			<div class="col-md-3">{{ form_row(form.country) }}</div>
			<div class="col-md-3">{{ form_row(form.postal) }}</div>
			<div class="col-md-3">{{ form_row(form.phone) }}</div>
			<div class="form-group text-center">
				<button type="submit" class="btn btn-outline-dark">Add</button>
			</div>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
